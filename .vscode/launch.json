    "version": "0.2.0",
    "configurations": [
        {
            "name": "ResourceCompiler-Debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/windows/x64/debug/SkrResourceCompiler.exe",
            "args": ["-w", "${workspaceFolder}"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/windows/x64/debug",
            "environment": [
                {
                    "name": "PATH",
                    "value": "${workspaceFolder}\\SDKs\\python;${env:VCPKG_ROOT}\\installed\\x64-windows\\debug\\bin;${env:PATH}"
                }
            ],
            "console": "externalTerminal"
        }

    ]
}